<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE pedido [
    <!ELEMENT pedido (idpedido,productos)>
    <!ELEMENT idpedido (#PCDATA)>
    <!ELEMENT productos (producto)>
    <!ELEMENT producto (idproducto,tipo,nombre,cantidad,precio,alergenos,calorias)>
    <!ELEMENT idproducto (#PCDATA)>
    <!ELEMENT tipo (#PCDATA)>
    <!ELEMENT nombre (#PCDATA)>
    <!ELEMENT cantidad (#PCDATA)>
    <!ELEMENT precio (#PCDATA)>
    <!ELEMENT alergenos (#PCDATA)>
    <!ELEMENT calorias (#PCDATA)>
]>

<pedido>
    <idpedido></idpedido>
    <productos>
        <producto>
            <idproducto></idproducto>
            <tipo></tipo>
            <nombre></nombre>
            <cantidad></cantidad>
            <precio></precio>
            <alergenos></alergenos>
            <calorias></calorias>
        </producto>
    </productos>
</pedido>